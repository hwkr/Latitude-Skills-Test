{{#>default section=sections.home page=sections.home}}
<div class="columns">
    <div class="column">
        <div class="toolbar">
            <ul class="tab" {{id}}>{{#each tabs}}
                <li class="tab-item {{#if (equals @index 0)}}active{{/if}}">
                    <a href="#{{id}}" aria-controls="{{id}}" role="tab" data-toggle="tab">{{title}}</a>
                </li>{{/each}}
            </ul>{{#each tabs}}
            <ul class="tab-panel {{#if (equals @index 0)}}active{{/if}}" role="tabpanel" id="{{id}}">{{#each items}}
                <li class="tab-panel-item">
                    <button class="btn"><img class="icon" src="{{icon}}"/> {{label}}</button>
                </li>{{/each}}
            </ul>{{/each}}
        </div>
    </div>
</div>
{{/default}}